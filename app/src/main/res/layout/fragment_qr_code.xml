<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/spinner"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/loadBtn"
        android:layout_toEndOf="@+id/loadBtn"
        android:layout_toRightOf="@+id/loadBtn"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/loadBtn"
        android:text="@string/loadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/load_btn"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"/>

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:contentDescription="@string/qrCode"
        android:scaleType="fitCenter"
        android:layout_below="@+id/loadBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"/>

</RelativeLayout>